---
import '../styles/global.css';

interface Props {
  title?: string;
  current?: 'home' | 'case-studies' | 'contact';
}

const { title = 'Portfolio', current = 'home' } = Astro.props as Props;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <title>{title}</title>
  </head>
  <body class="min-h-screen flex bg-off-black text-off-white font-sans">
    <style>
      body {
        background-image:
          radial-gradient(circle at top left, rgba(38, 38, 38, 0.4), transparent 55%),
          radial-gradient(circle at bottom right, rgba(50, 50, 50, 0.3), transparent 55%);
      }
    </style>
    
    <!-- Mobile hamburger button -->
    <button
      id="mobile-menu-toggle"
      class="fixed top-4 left-4 z-50 w-10 h-10 flex flex-col items-center justify-center gap-1.5 bg-surface border border-border rounded-lg lg:hidden"
      aria-label="Toggle navigation"
    >
      <span class="w-5 h-0.5 bg-off-white transition-all"></span>
      <span class="w-5 h-0.5 bg-off-white transition-all"></span>
      <span class="w-5 h-0.5 bg-off-white transition-all"></span>
    </button>

    <!-- Left vertical navigation -->
    <nav
      id="main-nav"
      class="fixed left-0 top-0 h-full w-20 bg-off-black/90 backdrop-blur-lg border-r border-border z-40 flex flex-col items-center pt-6 pb-6 transition-transform -translate-x-full lg:translate-x-0"
      aria-label="Primary"
    >
      <ul class="flex flex-col items-center gap-4">
        <li>
          <a
            href="/"
            aria-label="Home"
            aria-current={current === 'home' ? 'page' : undefined}
            class="group flex flex-col items-center gap-1.5 transition-all"
          >
            <div class={`w-12 h-12 flex items-center justify-center rounded-xl border transition-all ${current === 'home' ? 'bg-off-white text-off-black border-off-white' : 'bg-surface text-off-white border-border hover:bg-off-white hover:text-off-black hover:border-off-white'}`}>
              <svg aria-hidden="true" width="18" height="18" viewBox="0 0 16 16" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M8 1L1 6V15H6V10H10V15H15V6L8 1Z" stroke="currentColor" stroke-width="1.5" stroke-linejoin="round"/>
              </svg>
            </div>
            <span class="text-[0.65rem] text-muted group-hover:text-off-white transition-colors">Home</span>
          </a>
        </li>
        <li>
          <a
            href="/case-studies"
            aria-label="Case studies"
            aria-current={current === 'case-studies' ? 'page' : undefined}
            class="group flex flex-col items-center gap-1.5 transition-all"
          >
            <div class={`w-12 h-12 flex items-center justify-center rounded-xl border transition-all ${current === 'case-studies' ? 'bg-off-white text-off-black border-off-white' : 'bg-surface text-off-white border-border hover:bg-off-white hover:text-off-black hover:border-off-white'}`}>
              <svg aria-hidden="true" width="18" height="18" viewBox="0 0 16 16" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M2 2H7V7H2V2Z" stroke="currentColor" stroke-width="1.5"/>
                <path d="M9 2H14V7H9V2Z" stroke="currentColor" stroke-width="1.5"/>
                <path d="M2 9H7V14H2V9Z" stroke="currentColor" stroke-width="1.5"/>
                <path d="M9 9H14V14H9V9Z" stroke="currentColor" stroke-width="1.5"/>
              </svg>
            </div>
            <span class="text-[0.65rem] text-muted group-hover:text-off-white transition-colors">Work</span>
          </a>
        </li>
        <li>
          <a
            href="/contact"
            aria-label="Contact"
            aria-current={current === 'contact' ? 'page' : undefined}
            class="group flex flex-col items-center gap-1.5 transition-all"
          >
            <div class={`w-12 h-12 flex items-center justify-center rounded-xl border transition-all ${current === 'contact' ? 'bg-off-white text-off-black border-off-white' : 'bg-surface text-off-white border-border hover:bg-off-white hover:text-off-black hover:border-off-white'}`}>
              <svg aria-hidden="true" width="18" height="18" viewBox="0 0 16 16" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M1 3H15V13H1V3Z" stroke="currentColor" stroke-width="1.5" stroke-linejoin="round"/>
                <path d="M1 3L8 9L15 3" stroke="currentColor" stroke-width="1.5" stroke-linejoin="round"/>
              </svg>
            </div>
            <span class="text-[0.65rem] text-muted group-hover:text-off-white transition-colors">Talk</span>
          </a>
        </li>
      </ul>
    </nav>

    <!-- Main content area -->
    <div class="flex-1 flex flex-col lg:ml-20">
      <main class="flex-1">
        <slot />
      </main>

      <!-- Sub-footer: Company logos -->
      <div class="border-t border-border/50 bg-off-black/50 py-8">
        <div class="max-w-6xl mx-auto px-5 lg:px-8">
          <p class="text-xs text-muted mb-4">Companies I've worked with</p>
          <div class="text-sm text-muted/70">
            Company logos will be rendered here from Decap-managed content.
          </div>
        </div>
      </div>

      <!-- Main footer: Copyright & social -->
      <footer class="border-t border-border bg-off-black/95 py-5">
        <div class="max-w-6xl mx-auto px-5 lg:px-8 flex flex-col sm:flex-row sm:items-center sm:justify-between gap-3">
          <p class="text-xs text-muted">Â© {new Date().getFullYear()} {title}. All rights reserved.</p>
          <div class="flex gap-4">
            <a href="https://github.com" class="text-xs text-off-white hover:text-white transition-colors">GitHub</a>
            <a href="https://linkedin.com" class="text-xs text-off-white hover:text-white transition-colors">LinkedIn</a>
          </div>
        </div>
      </footer>
    </div>

    <script>
      // Mobile menu toggle
      const toggle = document.getElementById('mobile-menu-toggle');
      const nav = document.getElementById('main-nav');
      
      toggle?.addEventListener('click', () => {
        nav?.classList.toggle('-translate-x-full');
      });

      // Close menu when clicking outside on mobile
      document.addEventListener('click', (e) => {
        if (window.innerWidth < 1024 && 
            !nav?.contains(e.target as Node) && 
            !toggle?.contains(e.target as Node) &&
            !nav?.classList.contains('-translate-x-full')) {
          nav?.classList.add('-translate-x-full');
        }
      });
    </script>
  </body>
</html>
