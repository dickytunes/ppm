---
import BaseLayout from '../layouts/BaseLayout.astro';

const formEndpoint = 'https://formspree.io/f/xbldlbwk'; // replace with your Formspree form ID if needed
const base = import.meta.env.BASE_URL?.replace(/\/$/, '') || '';
const submitted = new URL(Astro.request.url).searchParams.get('submitted');
---
<BaseLayout title="Contact" current="contact">
  <section class="max-w-6xl mx-auto px-5 lg:px-8 py-12 pb-16">
    <h1 class="text-[1.6rem] font-semibold mb-3">Let&apos;s talk</h1>
    <p class="text-muted text-[0.95rem] mb-4">
      Share a bit about what you&apos;re working on or looking for and I&apos;ll get back to you.
    </p>
    {submitted === '1' && (
      <div class="mb-6 rounded-lg border border-border bg-surface/70 px-4 py-3 text-off-white" role="status">
        Thanks â€” your message was sent. I&apos;ll respond as soon as I can.
      </div>
    )}
    <form
      method="POST"
      action={formEndpoint}
      accept-charset="UTF-8"
      class="max-w-lg p-6 rounded-2xl bg-surface border border-border shadow-[0_24px_80px_rgba(0,0,0,0.9)]"
    >
      <div class="hidden" aria-hidden="true">
        <label>
          Don&apos;t fill this out if you&apos;re human
          <input name="_honeypot" type="text" />
        </label>
      </div>
      <input type="hidden" name="_redirect" value={`${base}/contact?submitted=1`} />
      <div class="mb-4">
        <label class="block text-[0.85rem] font-medium mb-1.5" for="name">Name</label>
        <input
          id="name"
          name="name"
          required
          class="w-full rounded-lg border border-border bg-off-black px-3 py-2 text-[0.85rem] text-off-white focus:outline-none focus:ring-2 focus:ring-off-white"
        />
      </div>
      <div class="mb-4">
        <label class="block text-[0.85rem] font-medium mb-1.5" for="email">Email</label>
        <input
          id="email"
          type="email"
          name="email"
          required
          class="w-full rounded-lg border border-border bg-off-black px-3 py-2 text-[0.85rem] text-off-white focus:outline-none focus:ring-2 focus:ring-off-white"
        />
      </div>
      <div class="mb-5">
        <label class="block text-[0.85rem] font-medium mb-1.5" for="message">Message</label>
        <textarea
          id="message"
          name="message"
          rows="5"
          required
          class="w-full rounded-lg border border-border bg-off-black px-3 py-2 text-[0.85rem] text-off-white resize-y focus:outline-none focus:ring-2 focus:ring-off-white"
        ></textarea>
      </div>
      <button
        type="submit"
        class="inline-flex items-center justify-center px-[1.1rem] py-2 rounded-full bg-off-white text-off-black text-[0.85rem] font-medium shadow-[0_24px_80px_rgba(0,0,0,0.9)] transition-all duration-150 hover:bg-white hover:-translate-y-0.5"
      >
        Send message
      </button>
    </form>
    <p class="text-muted text-[0.8rem] mt-7 max-w-lg">
      Prefer email? You can also reach me at
      <a href="mailto:you@example.com?subject=Portfolio%20enquiry" class="underline text-off-white hover:text-white">
        you@example.com
      </a>
      . The form posts to a third-party provider (Formspree); update the endpoint and email address in this file as needed.
    </p>
  </section>
</BaseLayout>
